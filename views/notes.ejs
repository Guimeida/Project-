<%- include('partials/header.ejs'); -%>

<div class="min-h-screen bg-gray-900 text-gray-200">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6 text-blue-400">Notes for "<%= resource.title %>"</h1>
    <form action="/notes/<%= resource.id %>" method="POST" class="bg-gray-800 p-6 rounded shadow-md space-y-4">
      <div>
        <label class="block font-semibold mb-2 text-gray-200">Your Notes</label>
        <textarea name="content"rows="8"class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-400"><%= note.content %></textarea>
      </div>
      <div class="flex items-center gap-4">
        <button type="submit"class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition font-semibold shadow">
          Save Notes
        </button>
        <a href="/home" class="text-blue-400 hover:text-blue-300 hover:underline transition">Back to Home</a>
      </div>
    </form>
  </div>
</div>
